<h1 align="center">Investigations</h1>

<div class="container">
<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th scope="col"><%= sortable "subject" %></th>
      <th scope="col"><%= sortable "uid", "UID" %></th>
      <th scope="col"><%= sortable "active" %></th>
      <th scope="col"><%= sortable "active_leads" %></th>
      <th scope="col"><%= sortable "department_id", "Department" %></th>
      <th scope="col"><%= sortable "created_at", "Date Created" %></th>
      <th scope="col">Edit:</th>
      <th scope="col">Delete:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investigations.each do |investigation| %>
      <tr>
        <td scope="row"><%= link_to investigation.subject, investigation %></td>
        <td><%= investigation.uid %></td>
        <td><%= investigation.active %></td>
        <td><%= investigation.active_leads %></td>
        <td><%= investigation.department.name %></td>
        <td><%= investigation.created_at %></td>
        <td><%= button_to 'Edit', edit_investigation_path(investigation.id) %></td>
        <td><%= button_to 'Delete', investigation_path(investigation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<div class="container">
    <div class="d-grid d-md-flex">
      <a href="<%= new_investigation_path %>" type="button" class="btn btn-outline-primary">New Investigation</a>
    </div>
</div>

