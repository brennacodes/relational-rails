<%= render 'navbar' %>

<p id="notice"><%= notice %></p>

<h1 align="center">Investigation</h1>

<div class="container">
<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th scope="col">Subject: </th>
      <th scope="col">UID: </th>
      <th scope="col">Active: </th>
      <th scope="col">Active leads: </th>
      <th scope="col">Department: </th>
      <th scope="col">Date Created: </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td scope="row"><%= @investigation.subject %></td>
        <td><%= @investigation.uid %></td>
        <td><%= @investigation.active %></td>
        <td><%= @investigation.active_leads %></td>
        <td><%= link_to "#{@investigation.department.name}", department_path %></td>
        <td><%= @investigation.created_at %></td>
        <td><%= link_to 'Edit', edit_investigation_path(@investigation.id) %></td>
        <td><%= link_to 'Delete', @investigation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
</table>
</div>

<br>

<div class="container">
    <div class="d-grid d-md-flex">
      <a href="<%= new_investigation_path %>" type="button" class="btn btn-outline-primary">New Investigation</a>
    </div>
</div>

<p id="notice"><%= notice %></p>
<br>
<div class="container">
  <a class="btn btn-primary" href="<%= investigations_path %>" role="button">Back</a>
</div>
