<h1 align="center"><%= "#{@department.name}" %></h1>

<div class="container">
<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th scope="col">Address: </th>
      <th scope="col">Jurisdiction: </th>
      <th scope="col">Active cases: </th>
      <th scope="col">Is Federal?: </th>
      <th scope="col">Date Created: </th>
      <th scope="col">Edit: </th>
      <th scope="col">Delete: </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td scope="row"><%= @department.address %></td>
        <td><%= @department.jurisdiction %></td>
        <td><%= link_to "#{@num_cases}", department_cases_path %></td>
        <td><%= @department.is_federal %></td>
        <td><%= @department.created_at %></td>
        <td><a href="<%= edit_department_path(@department.id) %>" type="button" class="btn btn-outline-primary btn-sm" >Edit</a></td>
        <td><%= button_to 'Delete', department_path(@department), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
</table>
</div>

<br>

  <div class="container">
    <div class="row g-5">
        <div class="col">
            <a class="btn btn-primary" href="<%= departments_path %>" role="button">Back</a>
        </div>

        <div class="col">
          <a href="<%= department_cases_path %>" type="button" class="btn btn-outline-primary">View All Cases</a>
        </div>

        <div class="col">
              <a href="<%= new_department_path %>" type="button" class="btn btn-outline-primary">New Department</a>
        </div>
    </div>
  </div>
<p id="notice"><%= notice %></p>