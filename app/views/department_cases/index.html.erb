<p id="notice"><%= notice %></p>

<h1>All Active Investigations: <%= @department.name %></h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Uid</th>
      <th>Active</th>
      <th>Active leads</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investigations.each do |investigation| %>
      <tr>
        <td><%= link_to investigation.subject, investigation %></td>
        <td><%= investigation.uid %></td>
        <td><%= investigation.active %></td>
        <td><%= investigation.active_leads %></td>
        <td><%= link_to 'Edit', edit_investigation_path(investigation.id) %></td>
        <td><%= link_to 'Delete', investigation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Back to #{@department.name} ", controller: "departments", action: "show", id: @department.id %>